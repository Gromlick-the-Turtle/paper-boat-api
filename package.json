{
  "name": "paper-boat-api",
  "version": "1.0.0",
  "description": "An abstract management API",
  "license": "ISC",
  "author": "K Hewett",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "npx playwright test --ui",
    "dev": "nodemon index.js",
    "cli": "node ./src/cli/pb"
  },
  "imports": {
    "#config/*": "./src/config/*.js",
    "#models/*": "./src/models/*.js",
    "#controllers/*": "./src/controllers/*.js",
    "#routes/*": "./src/routes/*.js",
    "#middleware/*": "./src/middleware/*.js",
    "#tests/*": "./src/tests/*.spec.js",
    "#route-tests/*": "./src/tests/*.route.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "commander": "^14.0.1"
  },
  "nodemonConfig": {
    "legacyWatch": true,
    "verbose": true,
    "ext": "js,json,sql",
    "watch": [
      "src/*"
    ]
  }
}
